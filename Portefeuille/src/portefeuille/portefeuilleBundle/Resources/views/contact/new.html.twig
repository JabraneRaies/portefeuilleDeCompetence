{% extends 'portefeuilleBundle:layouts:mainLayout.html.twig' %}

{% block body -%}

<div class="col-lg-6">
    <section class="panel">
        <header class="panel-heading">
           Contact
        </header>
        <div class="panel-body">
                {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.nom) }}        
            </div>
            <div class="form-group">
                {{ form_row(form.prenom) }}
            </div>
            <div class="form-group">
                {{ form_row(form.numero) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group">
               {{ form_row(form.message) }}
            </div>
            
            {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </section>
</div>
{% endblock %}
